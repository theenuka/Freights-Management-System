<Window x:Class="FreightsManagementWPF.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Register - Freights Management System" 
        Height="700" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Window.Resources>
        <Style x:Key="RegisterTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Height" Value="56"/>
        </Style>
        
        <Style x:Key="RegisterPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Height" Value="56"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Background="{DynamicResource PrimaryHueMidBrush}">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon Grid.Column="0" Kind="AccountPlus" 
                                       Width="48" Height="48" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Create Account" 
                             FontSize="24" FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Text="Join our platform today" 
                             FontSize="14" 
                             Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Registration Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20" MaxWidth="350">
                
                <!-- Welcome Message -->
                <TextBlock Text="Create Your Account" 
                         FontSize="28" FontWeight="Bold" 
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,30"
                         Foreground="{DynamicResource MaterialDesignBody}"/>

                <!-- Username -->
                <TextBox Style="{StaticResource RegisterTextBox}"
                       materialDesign:HintAssist.Hint="Username"
                       materialDesign:HintAssist.IsFloating="True"
                       Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Email -->
                <TextBox Style="{StaticResource RegisterTextBox}"
                       materialDesign:HintAssist.Hint="Email Address"
                       materialDesign:HintAssist.IsFloating="True"
                       Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- First Name -->
                <TextBox Style="{StaticResource RegisterTextBox}"
                       materialDesign:HintAssist.Hint="First Name"
                       materialDesign:HintAssist.IsFloating="True"
                       Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Last Name -->
                <TextBox Style="{StaticResource RegisterTextBox}"
                       materialDesign:HintAssist.Hint="Last Name"
                       materialDesign:HintAssist.IsFloating="True"
                       Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Password -->
                <PasswordBox Style="{StaticResource RegisterPasswordBox}"
                           materialDesign:HintAssist.Hint="Password"
                           materialDesign:HintAssist.IsFloating="True"
                           x:Name="PasswordBox"/>

                <!-- Confirm Password -->
                <PasswordBox Style="{StaticResource RegisterPasswordBox}"
                           materialDesign:HintAssist.Hint="Confirm Password"
                           materialDesign:HintAssist.IsFloating="True"
                           x:Name="ConfirmPasswordBox"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                         Foreground="Red" 
                         TextWrapping="Wrap"
                         Margin="0,8"
                         Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Success Message -->
                <TextBlock Text="{Binding SuccessMessage}" 
                         Foreground="Green" 
                         TextWrapping="Wrap"
                         Margin="0,8"
                         Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Register Button -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                      Content="CREATE ACCOUNT"
                      Background="{DynamicResource PrimaryHueMidBrush}"
                      Foreground="White"
                      Height="48"
                      Margin="0,20,0,10"
                      Command="{Binding RegisterCommand}"
                      IsEnabled="{Binding CanRegister}">
                    
                    <Button.Content>
                        <Grid>
                            <TextBlock Text="CREATE ACCOUNT" 
                                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>
                            <StackPanel Orientation="Horizontal" 
                                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                           Width="20" Height="20"
                                           IsIndeterminate="True"
                                           Foreground="White"/>
                                <TextBlock Text="CREATING..." Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button.Content>
                </Button>

                <!-- Back to Login -->
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                      Content="Already have an account? Login here"
                      HorizontalAlignment="Center"
                      Margin="0,10"
                      Command="{Binding BackToLoginCommand}"/>

                <!-- Password Requirements -->
                <Border Background="{DynamicResource MaterialDesignDivider}" 
                      Padding="15" Margin="0,20,0,0"
                      CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Password Requirements:" FontWeight="Bold" FontSize="12"/>
                        <TextBlock Text="• At least 6 characters long" FontSize="11"/>
                        <TextBlock Text="• Mix of letters and numbers recommended" FontSize="11"/>
                        <TextBlock Text="• Passwords must match" FontSize="11"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignDivider}" Height="1"/>
        <TextBlock Grid.Row="2" 
                 Text="© 2024 Freights Management System" 
                 FontSize="11" 
                 HorizontalAlignment="Center" 
                 Margin="0,8"
                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
    </Grid>
</Window>